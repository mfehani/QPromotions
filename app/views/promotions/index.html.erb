<h1>Listing promotions</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Discount</th>
      <th>Branch</th>
      <th>Category</th>
      <th>Location</th>
      <th>Description</th>
      <th>Valid</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @promotions.each do |promotion| %>
      <tr>
        <td><%= promotion.name %></td>
        <td><%= promotion.discount %></td>
        <td><%= promotion.branch %></td>
        <td><%= promotion.category %></td>
        <td><%= promotion.location %></td>
        <td><%= promotion.description %></td>
        <td><%= promotion.valid %></td>
        <td><%= link_to 'Show', promotion %></td>
        <td><%= link_to 'Edit', edit_promotion_path(promotion) %></td>
        <td><%= link_to 'Destroy', promotion, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

